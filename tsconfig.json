{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",

        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "webpack-env"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "esnext",
            "es2015", "es2016", "es2017", "es2018", "es2019", "es2020",
            "dom",
            "dom.iterable"
        ]
    },
    "include": [
        "public/src/*.ts",
        "public/src/*.tsx",
        "public/src/*.vue"
    ],
    "exclude": [
        "./node_modules",
        "./node_modules/**/*.*"
    ]
}

